<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brewedapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BrewedApp">
        <activity android:name=".CartActivity"></activity>
        <activity android:name=".ProductInfoActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DisplayProductsActivity" />
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/Theme.BrewedApp.LoginSignup" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.BrewedApp.LoginSignup" />
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>