<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductInfoActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/signup_back_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/back_btn_pia"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:layout_marginStart="19dp"
            android:background="@drawable/back_button"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/dosis"
            android:text="Product Info"
            android:textSize="30sp"
            android:textColor="@color/navy_main"
            android:letterSpacing="0.1"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="260dp"
        android:layout_height="264dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/buddha_beans_mexico"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp">

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="33dp">

            <TextView
                android:id="@+id/title_tv"
                style="@style/pia_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/weight_tv"
                android:text="French Truck Coffee" />

            <TextView
                android:id="@+id/weight_tv"
                style="@style/pia_attributes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="340g" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1">
            <TextView
                style="@style/pia_subtitle"
                android:id="@+id/origin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brooklynn, New York"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="5dp"
            android:background="#2D979797"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/line2"/>

        <RelativeLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@id/line2">
            <TextView
                style="@style/pia_attributes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roast Level"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/roast_level_tv"
                style="@style/pia_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Medium" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/line3">
            <TextView
                style="@style/pia_attributes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:layout_alignParentStart="true"/>
            <TextView
                style="@style/pia_values"
                android:id="@+id/notes_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/line4">
            <TextView
                style="@style/pia_attributes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acidity Level"
                android:layout_alignParentStart="true"/>
            <TextView
                style="@style/pia_values"
                android:id="@+id/acidity_level_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/line5">
            <TextView
                style="@style/pia_attributes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grind"
                android:layout_alignParentStart="true"/>
            <TextView
                style="@style/pia_values"
                android:id="@+id/grind_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/line6">
            <TextView
                style="@style/pia_attributes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_alignParentStart="true"/>
            <TextView
                style="@style/pia_values"
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <Button
        style="@style/Widget.App.Button"
        android:id="@+id/add_to_cart_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/quicksand_bold"
        android:text="Add to Cart"
        android:backgroundTint="@color/pink_button"/>

</LinearLayout>