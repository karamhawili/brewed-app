<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FBFBFB"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/buddha_beans_mexico" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/product_price"
        style="@style/text_on_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/maven_pro"
        android:text="$50.00"
        android:textStyle="bold"
        android:layout_below="@id/materialCardView"
        android:layout_alignStart="@id/materialCardView"/>

    <TextView
        android:id="@+id/product_title"
        style="@style/title_on_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxWidth="140dp"
        android:text="Primo Passo Coffee"
        android:layout_below="@id/product_price"
        android:layout_alignStart="@id/product_price"
        android:layout_marginBottom="15dp"/>


</RelativeLayout>